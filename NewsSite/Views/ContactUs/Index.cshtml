@model NewsSite.Models.FeedbackEntry

@{
    Layout = @"..\Shared\_Layout.cshtml";
    ViewBag.Title = "Contact us";
    ViewBag.ViewTitle = "Share us with your thoughts";
}

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Name:</label>
            @Html.TextBoxFor(f => f.UserName, new {@class = "form-control"})
        </div>

        <div class="form-group">
            <label>Email:</label>
            @Html.TextBoxFor(f => f.Email, new {@class = "form-control"})
        </div>

        <div class="form-group">
            <label>Comment:</label>
            @Html.TextAreaFor(f => f.Comment, 5, 10, new {@class = "form-control"})
        </div>

        <div class="text-center">
            <input type="submit" class="btn" value="Send your comment"/>
        </div>
    }
