@model IList<NewsSite.Models.NewsEntry>
@{
    ViewBag.Title = "Create News";
    ViewBag.ViewTitle = "Create News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            @Html.Label("[" + i + "].Title")
            @Html.TextBox("[" + i + "].Title", Model[i].Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("[" + i + "].Content")
            @Html.TextArea("[" + i + "].Content", Model[i].Content, new { @class = "form-control" })
        </div>
        <hr />
    }
    
    <input type="submit" class="btn btn-info text-center" value="Create News" />
}
